{
  "name": "only-utils",
  "version": "0.3.3",
  "license": "MIT",
  "sideEffects": false,
  "description": "Only Nice Lean Yare - UTILS ...and some types",
  "repository": {
    "type": "git",
    "url": "https://github.com/kacper-olszanski/only-utils.git"
  },
  "type": "module",
  "main": "dist/main.cjs",
  "module": "dist/main.js",
  "types": "dist/main.d.ts",
  "author": {
    "name": "Kacper Olszanski",
    "email": "dev@rvtr.media",
    "url": "https://github.com/kacper-olszanski/"
  },
  "publishConfig": {
    "access": "public"
  },
  "keywords": [
    "util",
    "utility",
    "types",
    "modules",
    "es",
    "ts"
  ],
  "files": [
    "dist"
  ],
  "engines": {
    "node": ">=18"
  },
  "scripts": {
    "build": "tsc --p ./tsconfig.build.json && vite build",
    "dev": "vite",
    "preview": "vite preview",
    "upi": "pnpm update --interactive",
    "lint": "eslint . --ext ts",
    "lint:fix": "eslint --fix .",
    "test": "vitest",
    "treecheck": "pnpm build && agadoo dist/main.js",
    "cs": "pnpm changeset",
    "cs:version": "pnpm cs version",
    "release": "pnpm build && pnpm gen:docs && pnpm cs publish",
    "gen:docs": "node ./tooling/gen-docs.cjs",
    "prepare": "husky"
  },
  "devDependencies": {
    "@changesets/cli": "^2.27.1",
    "@types/node": "^20.12.4",
    "@typescript-eslint/eslint-plugin": "^7.5.0",
    "@typescript-eslint/parser": "^7.5.0",
    "@vitest/coverage-v8": "^1.3.1",
    "agadoo": "^3.0.0",
    "eslint": "^9.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-config-xo": "^0.44.0",
    "eslint-config-xo-typescript": "^4.0.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "prettier": "^3.2.5",
    "prettier-eslint": "^16.3.0",
    "pretty-quick": "^4.0.0",
    "typedoc": "^0.25.12",
    "typedoc-plugin-markdown": "^3.17.1",
    "typescript": "^5.4.4",
    "vite": "^5.2.8",
    "vite-plugin-dts": "^3.8.1",
    "vitest": "^1.3.1"
  }
}
